<body>
<div class="calculator">
    <input type="text" class="calculator-screen" value="" disabled />
    <div class="calculator-buttons">
        <button class="operator" value="+">+</button>
        <button class="operator" value="-">-</button>
        <button class="operator" value="*">&times;</button>
        <button class="operator" value="/">&divide;</button>
        <button class="operator" value="%">%</button>
        <button value="7">7</button>
        <button value="8">8</button>
        <button value="9">9</button>
        <button value="4">4</button>
        <button value="5">5</button>
        <button value="6">6</button>
        <button value="1">1</button>
        <button value="2">2</button>
        <button value="3">3</button>
        <button class="decimal" value=".">.</button>
        <button value="0">0</button>
        <button class="clear">AC</button>
        <button class="equal-sign" value="=">=</button>
    </div>
</div>

<script>
    const calculator = document.querySelector('.calculator');
    const calculatorScreen = document.querySelector('.calculator-screen');
    const buttons = document.querySelector('.calculator-buttons');

    let firstValue = null;
    let operator = null;
    let waitingForSecondValue = false;

    buttons.addEventListener('click', (event) => {
        const { target } = event;
        const { value } = target;

        if (!target.matches('button')) {
            return;
        }
 
        switch (value) {
            case '+':
            case '-':
            case '*':
            case '/':
            case '%':   
                handleOperator(value);
                break;
            case '=':
                calculate();
                break;
            case '.':
                inputDecimal(value);
                break;
            case 'AC':
                clearCalculator();
                break;
            default:
                inputDigit(value);
        }

        updateScreen();
    });

    function inputDigit(digit) {
        if (waitingForSecondValue === true) {
            calculatorScreen.value = digit;
            waitingForSecondValue = false;
        } else {
            calculatorScreen.value = calculatorScreen.value === '' ? digit : calculatorScreen.value + digit;
        }
    }

    function inputDecimal(dot) {
        if (!calculatorScreen.value.includes(dot)) {
            calculatorScreen.value += dot;
        }
    }

    function handleOperator(nextOperator) {
        const inputValue = parseFloat(calculatorScreen.value);

        if (operator && waitingForSecondValue) {
            operator = nextOperator;
            return;
        }

        if (firstValue === null) {
            firstValue = inputValue;
        } else if (operator) {
            const result = performCalculation[operator](firstValue, inputValue);
            calculatorScreen.value = String(result);
            firstValue = result;
        }

        waitingForSecondValue = true;
        operator = nextOperator;
    }

    const performCalculation = {
        '/': (firstOperand, secondOperand) => firstOperand / secondOperand,
        '*': (firstOperand, secondOperand) => firstOperand * secondOperand,
        '+': (firstOperand, secondOperand) => firstOperand + secondOperand,
        '-': (firstOperand, secondOperand) => firstOperand - secondOperand,
         '%': (firstOperand, secondOperand) => firstOperand % secondOperand,
    };

    function calculate() {
        if (firstValue === null || operator === null) {
            return;
        }

        const secondValue = parseFloat(calculatorScreen.value);
        const result = performCalculation[operator](firstValue, secondValue);

        calculatorScreen.value = String(result);
        firstValue = result;
        operator = null;
        waitingForSecondValue = true;
    }

    function clearCalculator() {
        firstValue = null;
        operator = null;
        waitingForSecondValue = false;
        calculatorScreen.value = '';
    }

    function updateScreen() {
        
    }
</script>
</body>
</html>
